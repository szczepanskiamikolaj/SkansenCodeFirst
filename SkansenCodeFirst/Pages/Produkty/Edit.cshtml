@page
@model SkansenCodeFirst.Pages.Produkty.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produkt.ProduktId" />
            <div class="form-group">
                <label class="control-label">Nazwa Produktu</label>
                <input asp-for="Produkt.ProduktName" class="form-control" />
                <span asp-validation-for="Produkt.ProduktName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cena Produktu</label>
                <input asp-for="Produkt.ProduktCena" class="form-control" />
                <span asp-validation-for="Produkt.ProduktCena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Wróc do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
