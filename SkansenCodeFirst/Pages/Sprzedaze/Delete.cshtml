@model SkansenCodeFirst.Pages.Sprzedaze.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Czy na pewno chcesz to usunąć?</h3>
<div>
    <h4>Sprzedaz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sprzedaz.Ilosc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sprzedaz.Ilosc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sprzedaz.DataSprzedazy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sprzedaz.DataSprzedazy)
        </dd>
