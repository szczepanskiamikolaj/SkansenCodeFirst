@page
@model SkansenCodeFirst.Pages.Sprzedaze.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj Nowy</h1>

<h4>Sprzedaz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sprzedaz.Ilosc" class="control-label"></label>
                <input asp-for="Sprzedaz.Ilosc" class="form-control" />
                <span asp-validation-for="Sprzedaz.Ilosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="Sprzedaz.DataSprzedazy" class="form-control" />
                <span asp-validation-for="Sprzedaz.DataSprzedazy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Produkt</label>
                <select asp-for="Sprzedaz.ProduktId" class ="form-control" asp-items="ViewBag.ProduktId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Pracownik</label>
                <select asp-for="Sprzedaz.PracownikId" class ="form-control" asp-items="ViewBag.PracownikId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Wróc do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
