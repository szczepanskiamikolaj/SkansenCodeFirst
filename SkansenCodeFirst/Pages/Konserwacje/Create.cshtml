@page
@model SkansenCodeFirst.Pages.Konserwacje.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Konserwacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="Konserwacja.KonserwacjaData" class="form-control" />
                <span asp-validation-for="Konserwacja.KonserwacjaData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Pracownik</label>
                <select asp-for="Konserwacja.PracownikId" class ="form-control" asp-items="ViewBag.PracownikId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Zabytek</label>
                <select asp-for="Konserwacja.ZabytekId" class ="form-control" asp-items="ViewBag.ZabytekId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Komentarz</label>
                <input asp-for="Konserwacja.KonserwacjaKomentarz" class="form-control" />
                <span asp-validation-for="Konserwacja.KonserwacjaKomentarz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Wróc do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
