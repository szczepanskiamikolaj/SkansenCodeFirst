@page
@model SkansenCodeFirst.Pages.Inwentaryzacje.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Inwentaryzacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Pracownik</label>
                <select asp-for="Inwentaryzacja.PracownikId" class ="form-control" asp-items="ViewBag.PracownikId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Zabytek</label>
                <select asp-for="Inwentaryzacja.ZabytekId" class="form-control" asp-items="ViewBag.ZabytekId"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Data</label>
                <input asp-for="Inwentaryzacja.DataRaportu" class="form-control" />
                <span asp-validation-for="Inwentaryzacja.DataRaportu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inwentaryzacja.Komentarz" class="control-label"></label>
                <input asp-for="Inwentaryzacja.Komentarz" class="form-control" />
                <span asp-validation-for="Inwentaryzacja.Komentarz" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Inwentaryzacja.WymagaRenowacji" /> @Html.DisplayNameFor(model => model.Inwentaryzacja.WymagaRenowacji)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Wróc do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
